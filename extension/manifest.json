{
  "manifest_version": 3,
  "name": "Anuvad — Local Transcription & Translation",
  "version": "0.1.0",
  "description": "Transcribe and translate audio locally in your browser using Whisper and NLLB — no data leaves your device.",
  "permissions": [
    "sidePanel",
    "tabCapture",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://huggingface.co/*"
  ],
  "action": {
    "default_title": "Open Anuvad"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "sidebar_action": {
    "default_panel": "index.html",
    "default_title": "Anuvad"
  },
  "background": {
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "anuvad@example.com",
      "strict_min_version": "115.0"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "workers/*",
        "*.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "public/icon-48.png",
    "128": "public/icon-128.png"
  }
}
